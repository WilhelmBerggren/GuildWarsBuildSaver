@model IEnumerable<GuildWarsBuildSaver.Models.Skill>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeaponType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NextChain)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PreviousChain)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlipSkill)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChatLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slot)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Icon)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Desc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WeaponType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NextChain)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PreviousChain)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FlipSkill)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChatLink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Slot)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Icon)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
